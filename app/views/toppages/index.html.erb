<% if logged_in? %>
 <%= render 'users/icon', user: @user %>
 
  <div class="col-xs-8">
    <%= render 'users/navbar',
    user: @user, count_followers: @count_followers,
    count_followings: @count_followings,
    count_microposts: @count_microposts,
    count_favorites: @count_favorites
    %>
    <%= render 'microposts/microposts', microposts: @microposts, user: @user %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h2>Welcome to the Microposts</h2>
      <h1><span class="glyphicon glyphicon-globe"></span></h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-md btn-primary' %>
    </div>
  </div>
<% end %>